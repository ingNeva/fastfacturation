int enterName (){

    int temporaly;

    char string [ 100 ];

    temporaly = 0;

    printf("Por favor introdusca el nombre del cliente");

    while ( "\n" != string[ temporaly ] )
    {
        scanf("%c",&string[ temporaly]);
        ++temporaly;
        
    }
    
    char newString [ temporaly];

    strncpy(newString, string , temporaly);

    return newString;

}
